<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/suggestionImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/suggestion_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/suggestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/inter_semibold"
            app:layout_constraintLeft_toRightOf="@id/suggestionImage"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/suggestionDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="This is a very long text. what is going on here?!"
            android:textSize="16sp"
            android:textColor="@color/lightgray"
            app:layout_constraintTop_toBottomOf="@id/suggestionTitle"
            app:layout_constraintLeft_toRightOf="@id/suggestionImage"
            />

</androidx.constraintlayout.widget.ConstraintLayout>