<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/medicine_gray">

    <Button
        android:id="@+id/exit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="X"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@color/transparent">
    </Button>


    <Button
        android:id="@+id/upload_image"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Upload Image"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/rounded">
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="160dp"
        >
    </TextView>

    <Button
        android:id="@+id/open_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Open Camera"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="200dp"
        android:layout_marginHorizontal="70dp"
        android:background="@drawable/rounded">
    </Button>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"

        />

    <RelativeLayout
        android:id="@+id/whitelayout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <EditText
            android:id="@+id/formMediName"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="-200dp"
            android:hint="Enter Medicine Name"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:textColor="@color/lightgray"
            android:textColorHint="@color/lightgray" />

        <EditText
            android:id="@+id/formMediDesc"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:hint="Enter Medicine Description"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:textColor="@color/black"
            android:textColorHint="@color/lightgray"
            android:layout_marginTop="-150dp"
            />

        <EditText
            android:id="@+id/formMediAmount"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:hint="Enter Medicine Amount"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:textColor="@color/black"
            android:textColorHint="@color/lightgray"
            android:layout_marginTop="-100dp"
            />

        <EditText
            android:id="@+id/formMediInfo"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:focusableInTouchMode="true"
            android:layout_marginTop="-50dp"
            android:clickable="true"
            android:hint="Enter Medicine Information"
            android:textColor="@color/black"
            android:textColorHint="@color/lightgray" />

    </RelativeLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="40dp"
        android:text="Confirm"
        android:textColor="@color/white"
        android:background="@drawable/rounded"
        android:gravity="center"
        >
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>